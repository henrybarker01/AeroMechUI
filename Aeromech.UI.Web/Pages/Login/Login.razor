@layout LoginLayout
@page "/login"
@using Microsoft.AspNetCore.Authorization
@attribute [AllowAnonymous]

<center>
    <div class="container-fluid">
        <div class="row">
            <div class="col-6 d-none d-lg-block" style="border-right:groove">
                <img src="./images/AeroMechNotInline.jpeg" style="max-width: 400px" />
            </div>
            <div class="col-6 d-none d-lg-block" style="border-left:groove">
                <div class="row" style="height:100px">
                </div>
                <div class="row">
                    <div class="col-md-2">
                    </div>
                    <div class="col-md-8">
                        <EditForm class="form-signin mb-4" Model="@_credential" OnSubmit="@Authenticate">
                            <div class="form-group">
                                <label for="user-name">User name</label>
                                <InputText class="form-control" id="user-name" aria-describedby="emailHelp" placeholder="e-mail" @bind-Value=@_credential.UserName />
                            </div>
                            <br />
                            <div class="form-group">
                                <label for="password">Password</label>
                                <InputText type="password" class="form-control" id="password" placeholder="Password" @bind-Value=@_credential.Password />
                            </div>
                            <br />
                            <div class="form-group">
                                <button type="submit" id="login" name="login" class="btn btn-primary">Login</button>
                            </div>
                        </EditForm>
                    </div>
                    <div class="col-md-2">
                    </div>
                </div>
            </div>
            <div class="row d-block d-sm-none">
                <div class="row" style="height:100px">
                </div>
                <div class="row">
                    <div class="col-md-2">
                    </div>
                    <div class="col-md-8">
                        <EditForm class="form-signin mb-4" Model="@_credential" OnSubmit="@Authenticate">
                            <div class="form-group">
                                <label for="user-name">User name</label>
                                <InputText class="form-control" id="user-name" aria-describedby="emailHelp" placeholder="e-mail" @bind-Value=@_credential.UserName />
                            </div>
                            <br />
                            <div class="form-group">
                                <label for="password">Password</label>
                                <InputText type="password" class="form-control" id="password" placeholder="Password" @bind-Value=@_credential.Password />
                            </div>
                            <br />
                            <div class="form-group">
                                <button type="submit" id="login" name="login" class="btn btn-primary">Login</button>
                            </div>
                        </EditForm>
                    </div>
                    <div class="col-md-2">
                    </div>
                </div>


            </div>
        </div>
        <div class="row d-block d-sm-none">
            <img src="./images/AeroMechNotInline.jpeg" style="max-width: 400px" />
        </div>
    </div>


</center>


